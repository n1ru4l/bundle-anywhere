{
  "compilerOptions": {
    "strict": true,
    "target": "es2017",
    "lib": ["ES2017", "WebWorker"],
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "alwaysStrict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "module": "CommonJS"
  },
  "include": ["src"]
}
